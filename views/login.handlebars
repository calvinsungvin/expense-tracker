<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mt-3">Sign in</h1>
        {{> message}}
      <form action="/users/login" method="POST">
        <div class="form-group">
          <label for="email">Email</label>
          <input type="email" id="email" name="email" class="form-control" placeholder="Please Enter Your Email" value="{{ name }}">
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input type="password" id="password" name="password" class="form-control" placeholder="Please Enter Your Password" value="{{ password }}">
        </div>
        <button type="submit" class="btn btn-success btn-block"><i class="fas fa-sign-in-alt"></i> Login</button>
        <a href="/auth/facebook" class="btn btn-primary btn-block"><i class="fab fa-facebook-square"></i> Facebook</a>      </form>
      <p class="lead mt-4">
        No Account? Sign up<a href="/users/register"> Here</a>
      </p>
    </div>
  </div>
</div>